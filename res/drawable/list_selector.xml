<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_window_focused="false"
        android:drawable="@android:color/transparent" />

    <item android:state_pressed="true">
        <shape>
            <gradient 
		        android:startColor="@color/listSelectorPressedTop"
		        android:centerColor="@color/listSelectorPressedCenter"
		        android:endColor="@color/listSelectorPressedBottom"
		        android:angle="270"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient 
		        android:startColor="@color/listSelectorFocusedTop"
		        android:centerColor="@color/listSelectorFocusedCenter"
		        android:endColor="@color/listSelectorFocusedBottom"
		        android:angle="270"/>
        </shape>
    </item>
    
</selector>

