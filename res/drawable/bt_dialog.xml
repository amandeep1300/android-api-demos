<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dialogButtonBackgroundPressed" />
        </shape>
    </item>
    
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/dialogButtonBackgroundSelected" />
        </shape>
    </item>
    
    <item>
        <shape>
            <solid android:color="@color/dialogButtonBackground" />
        </shape>
    </item>
    
</selector>